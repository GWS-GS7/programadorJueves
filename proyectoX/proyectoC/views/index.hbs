<div id="novedades" class="row py-4">
  <div class="col-md-5 offset-md-2 py-3">
    <h2>Novedades</h2>
    <ul class="lista-novedades">
      {{#each novedades}}
        <li>
          <a
            href="javascript:void(0);"
            data-bs-toggle="modal"
            data-bs-target="#Modal{{id}}"
          >
            <img src="/img/novedades01.jpg" />
            {{titulo}}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>

  <!-- Generación de modales por cada novedad -->
  {{#each novedades}}
    <div
      class="modal fade"
      id="Modal{{id}}"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="exampleModalLabel{{id}}"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel{{id}}">{{titulo}}</h2>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h5>{{subtitulo}}</h5>
            <p>{{cuerpo}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

