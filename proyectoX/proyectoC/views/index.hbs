<button
  type="button"
  class="btn btn-success pedido-flotante"
  data-bs-toggle="modal"
  data-bs-target="#modalPedido"
>Hacer mi pedido
</button>

<div
  class="modal fade"
  id="modalPedido"
  tabindex="-1"
  aria-labelledby="modalPedidoLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalPedidoLabel">Pedido de cerveza</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Cerrar"
        ></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" required />
          </div>
          <div class="mb-3">
            <label for="cerveza" class="form-label">Tipo de cerveza</label>
            <select class="form-select" id="cerveza">
              <option>Lager</option>
              <option>IPA</option>
              <option>Stout</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad</label>
            <input
              type="number"
              class="form-control"
              id="cantidad"
              min="1"
              required
            />
          </div>
          <div class="mb-3">
            <label for="contacto" class="form-label">WhatsApp o Email</label>
            <input type="text" class="form-control" id="contacto" required />
          </div>
          <button type="submit" class="btn btn-primary">Enviar pedido</button>
        </form>
      </div>
    </div>
  </div>
</div>
